<div class="container mb-5 bg-white rounded shadow h-400">
  <div class="row my-4 text-center">
    <h2>Our tours</h2>
  </div>
  <div class="row my-2">
  <!--list the tours -->
    <div class="col-12 col-sm-6">
      <div class="card-trip">
        <% @tours.each do |tour| %>
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
          <div class="card-trip-infos">
            <div>
              <%= link_to tour.title, tour_path(tour) %>
              <%= link_to tour.date, root_path %>
              <%= link_to tour.price, root_path %>
            </div>
            <h2 class="card-trip-pricing"><%= link_to tour.price, root_path %></h2>
            <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
            <div class="d-flex justify-content-between my-4">
              <%= link_to "delete", root_path, method: :delete, class: "btn btn-outline-primary m-2", data: { confirm: "Are you sure you want to delete this tours?" } %>
              <%= link_to "edit", root_path, class: "btn btn-outline-primary m-2" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
