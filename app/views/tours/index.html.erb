<div class="container-full">
  <div class="container-tours">
    <div class="container-tours-header">
      <div>
        <!-- Put search box here-->
        <%= form_tag tours_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Location"
          %>
          <%= submit_tag "Search", class: "btn btn-primary" %>
        <% end %>
      </div>
      <h2>We found <%= @tours.count %> tours</h2>
    </div>

    <!-- Tours index -->
    <div class="tour-grid">
      <% @tours.each do |tour| %>
      <div class="user-tour-card">
        <%= render partial: "shared/tour_card", locals: {tour: tour} %>
      </div>
      <% end %>
    </div>

  </div>
  <div class="map" data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
