<div class="container-full">
  <div class="container-tours">
    <!-- Carousel -->
    <div class="grid-first-child">
      <div class="container-image mb-5 bg-white rounded h-200">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active middle-img">
              <%= image_tag "boat.jpg", alt: "boat", width: 400, height: 300 %>
            </div>
            <% @tours.each do |tour| %>
              <div class="carousel-item middle-img">
                <div class="card-product">
                  <%= image_tag "localmarket.jpg", alt: "localmarket", width: 400, height: 300 %>
                </div>
              </div>
            <% end %>
          </div>
          <button
						class="carousel-control-prev"
						type="button"
						data-bs-target="#carouselExampleControls"
						data-bs-slide="prev"
					>
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button
						class="carousel-control-next"
						type="button"
						data-bs-target="#carouselExampleControls"
						data-bs-slide="next"
					>
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
    </div>
    <!-- Tours index -->
    <% @tours.each do |tour| %>
      <%= link_to tour_path(tour), class: "card-link" do %>
        <div class="card-tour-container">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg"/>
          <div class="card-tour-content">
            <h4><%= tour.title %></h4>
            <div class="details">
              <p><%= tour.date %></p>
              <p><%= tour.duration %></p>
            </div>
            <div>
              <p><%= tour.price %>â‚¬</p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="map" data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
