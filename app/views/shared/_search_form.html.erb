<%= form_tag tours_path, method: :get do %>
  <div class="row g-3">
    <div class="col-md-9">
      <%= text_field_tag :query,
        params[:query],
        class: "form-control col-md-10",
        placeholder: "Location"
      %>
    </div>
    <div class="col-md-3">
      <%= submit_tag "Search", class: "form-control btn btn-primary col-md-2" %>
    </div>
  </div>
<% end %>
