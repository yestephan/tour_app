<div>
  <div class="row">
    <div class="col-md-2">
      <%= image_tag @user.picture, size: "200x200" %>
    </div>
    <div class="col-md-10">
      <div class="row">
        <h2>My profile</h2>
      </div>
      <div class="row">
        <h4><%= "#{@user.first_name} #{@user.last_name}" %></h4>
      </div>
      <div class="row">
        <p><%= @user.description %></p>
      </div>
      <div class="row">
        <%= link_to "Edit profile", profile_edit_path, class: "btn btn-primary col-md-2" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10">
      <h2>My tours</h2>
    </div>
    <div class="col-md-2">
      <%= link_to "New tour", new_tour_path, class: "btn btn-secondary" %>
    </div>
  </div>
  <div class="row">

  </div>
</div>
